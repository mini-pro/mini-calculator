
<view class='cal-containor'>
  
  <view class="btn-eara">
    <view class="cal-flex-result">
      <text class='cal-result'>{{result}}</text>
    </view>
    <view class='cal-express'>
      <text style="color: #333333;font-size:15px;">{{express}}</text>
    </view>
    <view class="cal-flex">
      <view class='btn-gary' style='display:flex;justify-content:center;'>
        <navigator url="/pages/calculator/calculator" hover-class="navigator-hover">
          <image src='../../public/images/arrow.png'></image>
        </navigator>
      </view>
      <view class='btn-gary'><button bindtap='express'>复杂</button></view>
      <view class='btn-gary'><button bindtap='clear'>AC</button></view>
      <view class='btn-gary'><button bindtap='express' id='%'>%</button></view>
    </view>
    <view class="cal-flex">
      <view class='btn-black'><button bindtap='express' id='7'>7</button></view>
      <view class='btn-black'><button bindtap='express' id='8'>8</button></view>
      <view class='btn-black'><button bindtap='express' id='9'>9</button></view>
      <view class='btn-gary'><button bindtap='express' id='/'>÷</button></view>
    </view>
    <view class="cal-flex">
      <view class='btn-black'><button bindtap='express' id='4'>4</button></view>
      <view class='btn-black'><button bindtap='express' id='5'>5</button></view>
      <view class='btn-black'><button bindtap='express' id='6'>6</button></view>
      <view class='btn-gary'><button bindtap='express' id='*'>x</button></view>
    </view>
    <view class="cal-flex">
      <view class='btn-black'><button bindtap='express' id='1'>1</button></view>
      <view class='btn-black'><button bindtap='express' id='2'>2</button></view>
      <view class='btn-black'><button bindtap='express' id='3'>3</button></view>
      <view class='btn-gary'><button bindtap='express' id='-' >-</button></view>
    </view>
    <view class="cal-flex">
      <view class='btn-black'><button bindtap='express' id='0'>0</button></view>
      <view class='btn-black'><button bindtap='express' id='.' >.</button></view>
      <view class='btn-yellow'><button bindtap='caclu' id='='>=</button></view>
      <view class='btn-gary'><button bindtap='express' id='+'>+</button></view>
    </view>
  </view>
</view>