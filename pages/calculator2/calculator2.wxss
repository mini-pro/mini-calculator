
.cal-containor{
  background: #000000;
  height: 100%;
  display: block;
}
.btn-eara {
  background-color: #ffffff;
  position: absolute;
  bottom: 0px;
  width: 100%;
  height: 100%;
}
.cal-express {
  position: absolute;
  display: flex;
  width: 100%;
  line-height:20px;
  top: 11%;
}
.cal-express text{
  flex: 1;
  text-align: right;
  padding: 0px 20px;
  font-size: 20px;
}
.cal-flex-result {
  display: flex;
  height: 22%;
  border:1px solid #efefef;
}
.cal-flex-result .cal-result{
  color: #333333;
  text-align: right;
  flex:1;
  padding: 10px;
  font-size: 20px;
}
.cal-flex-icon {
  display: flex;
  height: 8%;
  background-color: #ffffff;
}
.cal-flex-icon image{
  width: 30px;
  height: 30px;
}
.cal-flex {
  display: flex;
  height: 14%;
  align-items: center;
}

.cal-flex view {
  flex: .25;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cal-flex view:hover {
  background: radial-gradient(#dff1fc 5%, #b5defa 30%, #ffffff 65%);
  
}
.cal-flex view + view {
  border-left: 1px solid #efefef;
  border-top: 1px solid #efefef;
}
.cal-flex view:first-child {
  border-left: 1px solid #efefef;
  border-top: 1px solid #efefef;
}

.cal-flex button
{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  
}
.cal-flex button::after{ border: none; }
.cal-flex image {
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  border: 1px solid #bbbbbb;
  background: #bbbbbb;
  padding: 5px;
}
.btn-white button {
  background-color: #ffffff;
  color: #666666;
}
.btn-white .button-hover { 
  background-color: #ffffff;
  color: #666666;
  opacity: .7;
}
.btn-yellow__color button {
  color: #f8a94e;
  background-color: #ffffff;
} 
.btn-yellow_color .button-hover {
  color: #f8a94e;
  background-color: #ffffff;
  opacity: .7;
}
.btn-blue,
.btn-blue button {
  background-color: #f8a94e;
  color: #ffffff;
}
.btn-blue .button-hover {
  background-color: #f8a94e;
  color: #ffffff;
  opacity: .7;
}
.btn-blue__color button{
  background: #ffffff;
  color: #22a1f7;
}


@media(min-width: 400px) {
  .cal-flex button {
    width: 80px;
    height: 80px;
  }
}
@media(min-width: 370px) {
  .cal-flex button {
    width: 70px;
    height: 70px;
  }
  .btn-large button {
    width: 100%;
  }
}
@media(max-width: 370px) {
  .cal-flex button {
    font-size: 16px;
  }
  .cal-flex image {
    padding: 0px;
  }
}
